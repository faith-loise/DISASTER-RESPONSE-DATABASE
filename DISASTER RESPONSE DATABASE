CREATE TABLE Victims (
Victim_ID VARCHAR (100) PRIMARY KEY,
Name VARCHAR(255),
Location VARCHAR(255),
Needs TEXT,
Status VARCHAR(50)
);

INSERT INTO Victims (Victim_ID, Name, Location, Needs, Status) VALUES

CREATE TABLE ResponseTeams (
    Team_ID VARCHAR(10) PRIMARY KEY,  
    Team_Name VARCHAR(255),
    Capabilities TEXT,
    Status VARCHAR(50)
);


INSERT INTO ResponseTeams (Team_ID, Team_Name, Capabilities, Status) 

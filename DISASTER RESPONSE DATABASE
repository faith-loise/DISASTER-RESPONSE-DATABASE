CREATE TABLE Disaster (
    Disaster_ID VARCHAR(100) PRIMARY KEY,            
    Type VARCHAR(100) NOT NULL,                
    Location VARCHAR(100) NOT NULL,
	Severity VARCHAR(100)NOT NULL,
    Disaster_Date DATE                          
);
